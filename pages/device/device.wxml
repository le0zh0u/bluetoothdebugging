<wxs module="m1">
  var getName = function (name) {

    var index = name.indexOf('-')

    var lastIndex = name.lastIndexOf('-')
    if (index == -1 || lastIndex == -1) {
      return name
    }
    return name.substring(0, index + 1) + '****' + name.substring(lastIndex, name.length)
  }

  var getAuth = function (item) {
    var name = item.uuid

    var properties = item.properties

    var str = ''

    if (properties.read) {
      str += 'R'
    }
    if (properties.write) {
      str += 'W'
    }
    if (properties.indicate) {
      str += 'I'
    }
    if (properties.notify) {
      str += 'N'
    }


    var index = name.indexOf('-')

    var lastIndex = name.lastIndexOf('-')
    if (index == -1 || lastIndex == -1) {
      return name
    }
    return name.substring(0, index + 1) + '(' + str + ')' + name.substring(lastIndex, name.length)
  }
  module.exports.getName = getName;
  module.exports.getAuth = getAuth;
</wxs>
<view>
  <button class="mg-10" wx:if="{{canWrite}}" size="mini" bindtap="writeBLECharacteristicValue">写数据</button>
</view>
