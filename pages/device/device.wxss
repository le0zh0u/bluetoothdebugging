/* pages/device/device.wxss */
.connected_info {
  width: 100%;
  background-color: #F0F0F0;
  padding: 10px;
  padding-bottom: 20px;
  margin-bottom: env(safe-area-inset-bottom);
  font-size: 14px;
  min-height: 100px;
  box-shadow: 0px 0px 3px 0px;
}
.connected_info .operation {
  position: absolute;
  display: inline-block;
  right: 30px;
}

.title{
  margin-left: 20rpx;
  margin-right: 20rpx; 
  font-size: 30rpx;
}

.text_title{
  display: flex;
  /* align-self: center; */
  margin-left: 20rpx;
  margin-right: 20rpx; 
  color: #8f8e94;
  font-size: 22rpx;
}

.text{
  font-size: 22rpx;
}
.line{
  background-color: #dadadb;
  height: 1rpx;
  width: 100%;
}
.cell{
  height: 64rpx;
  /* padding-right: 20rpx;
  padding-left: 20rpx; */
  background-color: #ffffff;
  align-items: center;
  justify-content: space-between; 
  display: flex;
}
.hover_click{
  background-color: #E5E5EA;
}

.error_tip{
  display: flex;
  height: 100vh;
  align-items: center;
  justify-content: center;
}

.v_line{
  width: 100%;
  height: 4rpx;
  background-color: #dadadb;
}